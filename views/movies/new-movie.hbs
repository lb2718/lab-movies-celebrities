<h2>Add a movie:</h2>
<form action="/movies/create" method="post">

<label for"title">Title</label>
<input type="text" name="title" id="title" placeholder="ex: Hide and Seek">

<label for"genre">Genre</label>
<input type="text" name="genre" id="genre" placeholder="ex: Thriller">

<label for"plot">Plot</label>
<input type="text" name="plot" id="plot" placeholder="ex: Kid does creepy stuff">

<label for="cast">Cast</label>
<select name="cast" id="cast" multiple>
  {{#each celebrities}}
<option value="{{_id}}">{{name}}</option>
{{/each}} 
</select>

  <input type="submit" value="Add the movie" />
</form>

  